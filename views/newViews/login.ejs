<html>
  <head>

    <title>Cerveceria Chester</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  </head>
  
  <body>
    <header>
        <div class='navbar'>
       
            <div class='logo'><a href="/"><img class="img0" src="/images/lupulo.png" alt=""></a> </div>
            <!-- </div> <a href="/"> <p class='titulo'>CERVECERIA CHESTER</p> </a> -->
             
            <ul class="navbar-list">
              <li class="navbar-list-item"><a href="/products/">CERVEZAS</a></li>
              <li class="navbar-list-item"><a href="/local">LOCALES</a></li>
              <li class="navbar-list-item"><a href="/eventos">EVENTOS</a></li>
              <li class="navbar-list-item"><a href="/fundadores">FUNDADORES</a></li>
              <li class="navbar-list-item"><a href="/contacto">CONTACTO</a></li>
            </ul>
            </div>
        
            <div class='iniciarsesion'> <p class='iniciarsesionp'> INICIAR SESION </p> </div>
            <div form="formulario" >
     
              <form action="/newViews/login" method="POST">
                <% if(typeof errors !== 'undefined') {%>
                  <ul>
                    <% for(error of errors) {%>
                      <li><%= error.msg %></li>
                    <% } %> 
                  </ul>
                <% } %>

                <div id="inputs">
                  <div>
                  <input name="email" class="email" type="text" placeholder="email">
                  <small class="emailError invisible"> Campo email es obligatorio </small>
                  <div>
                  <input name="password" class="passwordLogin" type="password" placeholder="password">
                  <small class="passwordError invisible"> Campo password es obligatorio </small>
        
                <div>
                  <input type="submit" value="login">
                  </div>
                  </div>
                  </div>
                  </div>
        

                <div class="remember-form">
                  <label for="remember">Recordarme</label>
                  <input name="remember" type="checkbox" value="true">
                </div>
                <p></p>
                
                <div id="labels">
                  <label for="reset">Password lost? <span>Reset</span></label>
                  <label for="register">Not registered? <a href="/users/register"><span>Create an account</span></a></label>
                </div>
              </form>
            </div>

       
       </header>

       <footer class='footer'>

        <div class='listas'>

          <ul class="nosotros-lista"> 
          <p class="titulo-lista-1">NOSOTROS</p> 
